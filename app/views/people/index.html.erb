<div class="search">
    <%= search_form_for @q do |f| %>
      <%= f.label :first_name_or_last_name_cont %>
    <div class="search_bar">
      <%= f.search_field :first_name_or_last_name_cont, placeholder: "Search" %>
    </div>
      <%= f.submit "Search"%>
    <% end %>
  </div>

<table>
  <tbody>
  <% if @search_results %>
    <td>
      <%= "Nothing to show" %>
    </td>
    <% @search_results.each do |l| %>
      <tr>
        <td><%= l.full_name %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<div class="table_and_header">
  <h1>Contact Directory with Birthdays</h1>
  <table>
    <thead>
      <tr id="headers">
        <th>
          <%= "Name" %>
        </th>
        <th>
          <%= "Phone" %>
        </th>
        <th>
          <%= "Title" %>
        </th>
        <th>
          <%= "Email" %>
        </th>
        <th>
          <%= "Birthday" %>
        </th>
      </tr>
    </thead>
    </thead>

    <% if @people %>
      <%- @people.each do |l| %>
      <tr>
        <td>
          <%= l.full_name %>
        </td>

        <td>
          <%= l.phone %>
        </td>

        <td>
          <%= l.title %>
        </td>
        <td>
          <%= l.email %>
        </td>
        <td>
          <%- if l.birthday %>
            <%= l.birthday.strftime("%B %d") %>
          <% end %>
        </td>
      <%- end %>
      </tr>
    <%- end %>
  </table>
</div>
